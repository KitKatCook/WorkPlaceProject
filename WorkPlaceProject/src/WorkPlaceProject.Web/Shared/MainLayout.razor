@using WorkPlaceProject.Web.WebServices;
@inherits LayoutComponentBase
@inject SideBarViewOptionService SideBarViewOptionService

<PageTitle>WorkPlaceProject</PageTitle>

<div class="page">
    <div class="sidebar @SideBarViewOptionService.NavBarClass">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
            <a href="About" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {

    protected override async Task OnInitializedAsync()
    {
        SideBarViewOptionService.OnChanged = () =>
        {
            StateHasChanged();//Refresh
        };
    }
}